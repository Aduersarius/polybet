{
  "crons": [
    {
      "path": "/api/sports/sync",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/hedge/snapshot-cron",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/polymarket/odds-cron",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/polymarket/resolution-sync",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/polymarket/reconcile",
      "schedule": "*/5 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/telegram/webhook",
      "destination": "/api/telegram/webhook"
    }
  ],
  "headers": [
    {
      "source": "/api/telegram/webhook",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}