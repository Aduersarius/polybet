{
    "buildCommand": "npm run build -- --webpack",
    "installCommand": "npm install",
    "framework": "nextjs",
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "env": {
        "PAYLOAD_MIGRATE_ON_START": "true"
    }
}