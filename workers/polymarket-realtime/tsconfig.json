{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "baseUrl": "../../",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "*.ts",
        "lib/**/*.ts",
        "../../lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}