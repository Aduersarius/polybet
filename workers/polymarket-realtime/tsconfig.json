{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "baseUrl": "../../",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "../../lib/__tests__",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}